# Maintainer: Peter Kokot <peterkokot@gmail.com>

pkgver=4.2.6
pkgrel=0
_phpver=7.3
_php=php$_phpver
_pkgreal=swoole
pkgname=$_php-$_pkgreal
pkgdesc="PHP $_phpver extension - Event-driven asynchronous and concurrent networking engine with high performance"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="Apache2.0"
depends="$_php-common"
makedepends="$_php-dev coreutils linux-headers"
source="http://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
builddir="$srcdir/$_pkgreal-$pkgver"
provides="php-$_pkgreal=$pkgver-r$pkgrel php7-$_pkgreal=$pkgver-r$pkgrel"
replaces="php-$_pkgreal php7-$_pkgreal"
options="!check"

prepare() {
  default_prepare
}

build() {
  local jobs=$(($(nproc)+1))

  cd "$builddir"

  phpize

  EXTENSION_DIR=/usr/lib/php/$_phpver/modules \
  CFLAGS="-fstack-protector-strong -fpic -fpie -O2" \
  CPPFLAGS="$CFLAGS" \
  LDFLAGS="-Wl,-O1 -Wl,--hash-style=both -pie" \
  ./configure \
    --prefix=/usr \
    --with-php-config=/usr/bin/php-config

  make -j$jobs
}

check() {
  cd "$builddir"

  local allow_fail='yes'

  NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
  mkdir -p "$pkgdir"
  install -d $pkgdir/
  make -C "$builddir" INSTALL_ROOT="$pkgdir" install
  install -d "$pkgdir"/etc/php/$_phpver/conf.d
  echo "extension=$_pkgreal" > "$pkgdir"/etc/php/$_phpver/conf.d/$_pkgreal.ini
}
sha512sums="92e90df15bd683a4c8f2172fc584e2dc7a4562e161abd62f89ee2540bcd30eb180d2ec012bf868c3c915ca0bbd2c0a6a4538439f84a3310ae0d74575e46ee16b  swoole-4.2.6.tgz"
