# Maintainer: Peter Kokot <peterkokot@gmail.com>

pkgver=1.0.1
pkgrel=0
_phpver=7.1
_php=php$_phpver
_pkgreal=ast
pkgname=$_php-$_pkgreal
pkgdesc="PHP $_phpver extension exposing PHP 7 abstract syntax tree"
url="https://pecl.php.net/package/$_pkgreal"
arch="all"
license="BSD-3-Clause"
depends="$_php-common"
makedepends="$_php-dev coreutils"
source="https://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
builddir="$srcdir/$_pkgreal-$pkgver"

prepare() {
  default_prepare
}

build() {
  local jobs=$(($(nproc)+1))

  cd "$builddir"

  phpize

  ./configure --prefix=/usr \
    --with-php-config=/usr/bin/php-config

  make -j$jobs
}

check() {
  cd "$builddir"

  make NO_INTERACTION=1 REPORT_EXIT_STATUS=1 test
}

package() {
  cd "$builddir"
  make INSTALL_ROOT="$pkgdir/" install
  install -d "$pkgdir"/etc/php/$_phpver/conf.d
  echo "extension=$_pkgreal.so" > "$pkgdir"/etc/php/$_phpver/conf.d/$_pkgreal.ini
}
sha512sums="c827b9d9eadbda5f4c8a1b6d9fce26b4d6bf6a12c7e383d44b906ca86c7a123c042c8ce8f2ea20fb072d4bd04e5262222dffa5e8eccd5fc9abbbc993b6d97991  php7.1-ast-1.0.0.tar.gz"
