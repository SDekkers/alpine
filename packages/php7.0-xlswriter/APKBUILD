# Maintainer: Peter Kokot <peterkokot@gmail.com>

pkgver=1.2.3
pkgrel=1
_phpver=7.0
_php=php$_phpver
_pkgreal=xlswriter
pkgname=$_php-$_pkgreal
pkgdesc="An efficient and fast xlsx file export extension for PHP $_phpver"
url="https://pecl.php.net/package/$_pkgreal"
arch="all"
license="BSD-3-Clause"
depends="$_php-common libxlsxwriter zlib"
makedepends="$_php-dev coreutils libxlsxwriter-dev zlib-dev"
source="https://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
  local jobs=$(($(nproc)+1))

  cd "$builddir"

  phpize

  ./configure --prefix=/usr \
    --with-php-config=/usr/bin/php-config \
    --with-libxlsxwriter

  make -j$jobs
}

check() {
  cd "$builddir"

  make NO_INTERACTION=1 REPORT_EXIT_STATUS=1 test
}

package() {
  cd "$builddir"
  make INSTALL_ROOT="$pkgdir/" install
  install -d "$pkgdir"/etc/php/$_phpver/conf.d
  echo "extension=$_pkgreal.so" > "$pkgdir"/etc/php/$_phpver/conf.d/$_pkgreal.ini
}
sha512sums="cd04428c1fa1777ca9ad747704e640fc360c99589d704db191545dcafeb8aba8ee26a7be3826dcadda878b26cde46a13fbce04ed358572fb93f42dc88a483853  xlswriter-1.2.3.tgz"
