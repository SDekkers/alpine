# Maintainer: Peter Kokot <peterkokot@gmail.com>

pkgver=2.0.13
pkgrel=0
_phpver=7.0
_php=php$_phpver
_pkgreal=sodium
pkgname=$_php-$_pkgreal
_pkglong=libsodium
pkgdesc="PHP $_phpver extension - Wrapper for the Sodium cryptographic library"
url="http://pecl.php.net/package/$_pkglong"
arch="all"
license="BSD-2"
depends="$_php-common libsodium"
makedepends="$_php-dev coreutils libsodium-dev"
source="http://pecl.php.net/get/$_pkglong-$pkgver.tgz"
builddir="$srcdir/$_pkglong-$pkgver"

prepare() {
  default_prepare
}

build() {
  local jobs=$(($(nproc)+1))

  cd "$builddir"

  phpize

  EXTENSION_DIR=/usr/lib/php/$_phpver/modules \
  CFLAGS="-fstack-protector-strong -fpic -fpie -O2" \
  CPPFLAGS="$CFLAGS" \
  LDFLAGS="-Wl,-O1 -Wl,--hash-style=both -pie" \
  ./configure \
    --prefix=/usr \
    --with-php-config=/usr/bin/php-config

  make -j$jobs
}

check() {
  cd "$builddir"

  local allow_fail='yes'

  NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
  mkdir -p "$pkgdir"
  install -d $pkgdir/
  make -C "$builddir" INSTALL_ROOT="$pkgdir" install
  install -d "$pkgdir"/etc/php/$_phpver/conf.d
  echo "extension=$_pkgreal.so" > "$pkgdir"/etc/php/$_phpver/conf.d/$_pkgreal.ini
}
sha512sums="c5c0da778c18037aee067a24d23b4d5deae4fe3cccd4835682440cb166275ff229b49393abb276013fae7f10aa2ebf9fb15b67f33097317479ca8e9f57cdac08  libsodium-2.0.13.tgz"
