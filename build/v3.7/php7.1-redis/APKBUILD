# Maintainer: Peter Kokot <peterkokot@gmail.com>

pkgver=4.0.1
pkgrel=0
_phpver=7.1
_php=php$_phpver
_pkgreal=redis
pkgname=$_php-$_pkgreal
pkgdesc="PHP $_phpver extension for interfacing with Redis"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="PHP-3"
depends="$_php-common $_php-session"
makedepends="$_php-dev coreutils"
source="http://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
builddir="$srcdir/$_pkgreal-$pkgver"
options="!check"

prepare() {
  default_prepare
}

build() {
  local jobs=$(($(nproc)+1))

  cd "$builddir"

  phpize

  EXTENSION_DIR=/usr/lib/php/$_phpver/modules \
  CFLAGS="-fstack-protector-strong -fpic -fpie -O2" \
  CPPFLAGS="$CFLAGS" \
  LDFLAGS="-Wl,-O1 -Wl,--hash-style=both -pie" \
  ./configure \
    --prefix=/usr \
    --with-php-config=/usr/bin/php-config

  make -j$jobs
}

check() {
  cd "$builddir"

  local allow_fail='no'

  NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
  mkdir -p "$pkgdir"
  install -d $pkgdir/
  make -C "$builddir" INSTALL_ROOT="$pkgdir" install
  install -d "$pkgdir"/etc/php/$_phpver/conf.d
  echo "extension=$_pkgreal.so" > "$pkgdir"/etc/php/$_phpver/conf.d/$_pkgreal.ini
}
sha512sums="b7f7ccfcf5ac404f5fa9103c7ee2a864014e94595c3385479d8b106602b47e64beb1acb926bc2a9253d7146d4768e50bc758a2148b7e273e773779fa1bbd0cdd  redis-4.0.1.tgz"
